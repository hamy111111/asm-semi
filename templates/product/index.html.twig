{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-primary" href="{{ path('product_create') }}">Add Product</a>
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Size</th>
                <th>Image</th>
                <th>Brand</th>
                <th>Category</th>
            </tr>
            </thead>
            <tbody>
            {% for product in product %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} <h6> VND </h6></td>
                    <td>{{ product.size }}</td>
                    <td><div class="col-md-5">
                            <img src="{{ asset('uploads/'~product.image) }}" alt="" class="img-thumbnail" />
                        </div></td>
                    <td>{{ product.brand }}</td>
                    <td>{{ product.category }}</td>
{#                    <td> <a href="{{ asset('upload/image/' ~ product.image) }}">View image</a><td>#}
                    <td>
                                                <a href="{{ path('product_details', {'id': product.id}) }} " class='btn btn-danger'>View</a>
                                                <a href="{{ path('product_edit', {'id': product.id}) }}" class='btn btn-default'>Edit</a>
                                         <a href="{{ path('product_delete', {'id': product.id}) }}" class='btn btn-danger'>Delete</a>
{#                        <a href="{{path('product_details',{'id':product.id})}} " class='btn btn-success'>View</a>#
{#                        <a href="#" class='btn btn-default'>Edit</a>#}
{#                        <a href="{{ path('product_delete', {'id': product.id}) }} "class='btn btn-danger'>Delete</a>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

